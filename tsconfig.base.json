{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "paths": {
            "@common": [
                "packages/common/src/index"
            ],
            "@/*": [
                "./packages/client/src/*"
            ],
            "~/*": [
                "./packages/server/src/*"
            ]
        },
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    }
}
